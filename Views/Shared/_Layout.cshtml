<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    @if (ViewBag.isLoggedin == true)
    {
        <header class="bg-blue flex justify-between items-center h-24 rounded-b-lg px-4">
            <div></div>
            <div><h1 class="text-3xl">Smart Trafic Management System</h1></div>
            <div></div>
        </header>
    }
    else
    {
        <header class="bg-blue flex justify-between items-center h-24 rounded-b-lg px-4">
            <div><a href="/Home" class="btn-primary">Home</a></div>
            <div><h1 class="text-3xl">Smart Trafic Management System</h1></div>
            <div><button class="btn-primary btn-red">Logout</button></div>
        </header>
    }
    @RenderBody()
</body>
</html>